<div class="sign-up-container">
  <div class="row">
    <div class="card col-xs-10 col-md-10">
      <div class="sign-up-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h2 class="title-sign-up">Crear una cuenta</h2>
          <div class="input-group">
            <%= f.label :Correo_Electrónico %><br/>
            <%= f.email_field :email, class: "input-signup", autofocus: true, autocomplete: "email" %>
          </div>
          <br/>
          <div class="input-group">
            <%= f.label :Contraseña %>
            <%= f.password_field :password, class: "input-signup", autocomplete: "new-password" %>
          </div>
          <br/>
          <div class="input-group">
            <%= f.label :Confirmar_Contraseña %><br />
            <%= f.password_field :password_confirmation, class: "input-signup", autocomplete: "new-password" %>
          </div>
          <br>
          <div class="signup-container">
            <%= f.submit "Crear Cuenta", class:"btn-signup"%>
          </div>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to "Ingresar con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn-signup-facebook", type: "button"%>
                <br/>
              <% end %>
          <% end %>
          <hr>
          <div class="container-return-login">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Ya tienes cuenta?, Ingresa", new_session_path(resource_name), class:'return-login'%>
            <% end %>
          </div> 

        <% end %> 
        <!--<%= render "devise/shared/links" %>-->
      </div>  
    </div>
  </div>  
</div>  