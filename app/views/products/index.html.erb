<div class="container-products">
  <div class="row title-products">
    <div class="col-md-12">
      <h2>Productos</h2>
    </div>  
  </div> 
  <div class="row container-button-newproduct float-right"> 
    <div class="col-md-12">
      <%= link_to '<i class="fas fa-file-download"></i> Generar PDF'.html_safe, generate_pdf_path(format: :pdf), class: 'btn-generate-pdf' %>
      <%= link_to '<i class="fa fa-plus-circle"></i> Nuevo Producto'.html_safe, new_product_path, class: 'btn-new-product'%>
    </div>  
  </div>

  <div class="table-responsive-sm">
    <table class="table">
      <thead class=thead-border>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Descripci√≥n</th>
          <th scope="col">Precio de Compra</th>
          <th scope="col">Nombre</th>
          <th scope="col">Precio de venta</th>
          <th scope="col">SKU</th>
          <th scope="col">Estado</th>
          <th scope="col">Stock</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.description %></td>
            <td><%= product.purchase_price %></td>
            <td><%= product.name %></td>
            <td><%= product.sale_price %></td>
            <td><%= product.sku %></td>
            <td><%= product.state %></td>
            <td><%= product.stock %></td>
            <td><%= link_to '<i class="fa fa-edit edit-product"></i>'.html_safe, edit_product_path(product) %></td>
            <% if can? :destroy, @product %>
              <td><%= link_to '<i class="fa fa-trash delete-product"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>